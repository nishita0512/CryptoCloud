<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/mainLayoutCryptoFileSingleRow"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingVertical="16dp"
    android:background="@drawable/edit_text_background"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imgFileCardViewSingleRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imgFileSingleRow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/edit_text_background"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/txtFileNameSingleRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:text="File Name"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@id/imgFileCardViewSingleRow"
        app:layout_constraintEnd_toStartOf="@id/btnMenuFileSingleRow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtFileOwnerNameSingleRow"/>

    <TextView
        android:id="@+id/txtFileOwnerNameSingleRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="owner"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@id/imgFileCardViewSingleRow"
        app:layout_constraintEnd_toStartOf="@id/btnMenuFileSingleRow"
        app:layout_constraintTop_toBottomOf="@id/txtFileNameSingleRow"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/btnMenuFileSingleRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/ic_three_dots"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

